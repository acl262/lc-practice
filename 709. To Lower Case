class Solution {
    public String toLowerCase(String str) {
        StringBuilder sb = new StringBuilder();
        
        //Character.toLowerCase()
        //Character.toString()
        for(int i=0; i < str.length(); i++) {
            char c = Character.toLowerCase(str.charAt(i));
            sb.append(Character.toString(c));
        }
        return sb.toString();
        
    }
}
